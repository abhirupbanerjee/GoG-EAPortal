# ============================================
# BACKEND ENVIRONMENT CONFIGURATION
# ============================================
# These variables are populated from root .env via docker-compose

# CORS Configuration
CORS_ORIGINS=${CORS_ORIGINS}

# Service URLs (for internal communication)
MINIO_INTERNAL_HOST=minio
MINIO_INTERNAL_PORT=9000
MINIO_PUBLIC_URL=${MINIO_PUBLIC_URL}

DRUPAL_INTERNAL_HOST=drupal
DRUPAL_INTERNAL_PORT=80
DRUPAL_PUBLIC_URL=${DRUPAL_PUBLIC_URL}

ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

FRONTEND_PUBLIC_URL=${FRONTEND_PUBLIC_URL}

# MinIO Credentials
MINIO_ROOT_USER=${MINIO_ROOT_USER}
MINIO_ROOT_PASSWORD=${MINIO_ROOT_PASSWORD}
MINIO_BUCKET=mybucket

# Database Configuration (if using PostgreSQL for backend)
DATABASE_URL=postgresql://user:pass@postgres:5432/dbname