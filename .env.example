TRAEFIK_DASHBOARD_PASSWORD=$apr1$xyz123$abcdefghijklmnop

# Contact Information
CONTACT_EMAIL=mailabhirupbanerjee@gmail.com

# ============================================
# WIKI.JS CONFIGURATION
# ============================================

WIKI_DB_TYPE=postgres
WIKI_DB_HOST=wiki_db
WIKI_DB_PORT=5432
WIKI_DB_NAME=wiki
WIKI_DB_USER=wikijs
WIKI_DB_PASSWORD=changeme_wiki_secure_password

# ============================================
# PAPERLESS-NGX CONFIGURATION
# ============================================

# Database
PAPERLESS_DBHOST=paperless_db
PAPERLESS_DBNAME=paperless
PAPERLESS_DBUSER=paperless
PAPERLESS_DBPASS=changeme_paperless_secure_password
PAPERLESS_DBPORT=5432

# Redis
PAPERLESS_REDIS=redis://paperless_redis:6379

# Admin User (created on first run)
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=changeme_admin_secure_password
PAPERLESS_ADMIN_MAIL=mailabhirupbanerjee@gmail.com

# Security
PAPERLESS_SECRET_KEY=changeme_generate_random_50_character_secret_key_here

# Application Settings
PAPERLESS_URL=https://dms.gea.abhirup.app
PAPERLESS_TIME_ZONE=America/Grenada
PAPERLESS_OCR_LANGUAGE=eng

# Optional: Enable these for additional features
PAPERLESS_OCR_LANGUAGES=eng
PAPERLESS_CONSUMER_POLLING=60
PAPERLESS_CONSUMER_RECURSIVE=true
PAPERLESS_CONSUMER_SUBDIRS_AS_TAGS=true

# Tika & Gotenberg
PAPERLESS_TIKA_ENABLED=1
PAPERLESS_TIKA_ENDPOINT=http://tika:9998
PAPERLESS_TIKA_GOTENBERG_ENDPOINT=http://gotenberg:3000

# ============================================
# NOTES
# ============================================
# 1. Change all passwords before deploying to production
# 2. Generate PAPERLESS_SECRET_KEY using: openssl rand -base64 50
# 3. Generate TRAEFIK_DASHBOARD_PASSWORD using: htpasswd -nb admin yourpassword
# 4. Ensure DNS records are configured in Cloudflare (Grey Cloud)