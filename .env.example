# Development Environment Template

DEPLOYMENT_ENV=dev

# Development Domains (abhirup.app)
BASE_DOMAIN=abhirup.app
FRONTEND_DOMAIN=gea.abhirup.app
API_DOMAIN=api.gea.abhirup.app
CMS_DOMAIN=cms.gea.abhirup.app
MINIO_DOMAIN=minio.gea.abhirup.app
MINIO_CONSOLE_DOMAIN=minio-console.gea.abhirup.app
DB_DOMAIN=db.gea.abhirup.app
SEARCH_DOMAIN=search.gea.abhirup.app
TRAEFIK_DOMAIN=traefik.gea.abhirup.app
DBADMIN_DOMAIN=dbadmin.gea.abhirup.app
WIKI_DOMAIN=wiki.gea.abhirup.app
DMS_DOMAIN=dms.gea.abhirup.app

# Computed URLs
FRONTEND_URL=https://gea.abhirup.app
API_URL=https://api.gea.abhirup.app
CMS_URL=https://cms.gea.abhirup.app
MINIO_URL=https://minio.gea.abhirup.app
MINIO_CONSOLE_URL=https://minio-console.gea.abhirup.app
WIKI_URL=https://wiki.gea.abhirup.app
DMS_URL=https://dms.gea.abhirup.app

# CORS Origins
CORS_ORIGINS=https://gea.abhirup.app,https://cms.gea.abhirup.app,https://api.gea.abhirup.app

