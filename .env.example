POSTGRES_PASSWORD=postgrespassword
POSTGRES_DB=postgres

# Elasticsearch Configuration
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Traefik Configuration
LETS_ENCRYPT_EMAIL=mailabhirupbanerjee@gmail.com
